option_settings:
  ## Use the custom security group for the load balancer
  aws:elb:loadbalancer:
    SecurityGroups: '`{ "Ref" : "elbsg" }`'
    ManagedSecurityGroup: '`{ "Ref" : "elbsg" }`'

Resources:
  ## Custom restricted security group for load balancer
  elbsg:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription: Load Balancer security group for Elastic Benstalk
      VpcId: 
        Fn::GetOptionSetting: {OptionName: VPCId}
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: 8080
          ToPort: 8080
          CidrIp: 0.0.0.0/0
        - IpProtocol: tcp
          FromPort: 80
          ToPort: 80
          CidrIp: 0.0.0.0/0

